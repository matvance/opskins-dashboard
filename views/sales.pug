			.ui.relaxed.divided.list
				.item.sale
					.right.floated.content
						.ui.fitted.checkbox
							input(type="checkbox")
							label 
					.ui.image
						img(src="https://steamcdn-a.akamaihd.net/apps/730/icons/econ/default_generated/weapon_bayonet_am_doppler_phase1_light_large.2de778920740e6c402ab6ac36ff5e9410196fbe8.png")
