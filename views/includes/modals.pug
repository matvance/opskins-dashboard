.ui.add-friend.tiny.modal
	.header Add friend
	.content
		.ui.form
			.two.fields
				.three.wide.field
					label Name
					input(autocomplete="off" type="text")#friend-name
				.thirteen.wide.field
					label API Key
					input(autocomplete="off" type="text")#friend-api
	.actions
		.ui.positive.button Save
		.ui.cancel.button Dismiss